<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_item_userPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_item_friends_userName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_item_userPhoto"
        android:layout_toEndOf="@+id/iv_item_userPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_item_friends_status"
        android:layout_below="@+id/tv_item_friends_userName"
        android:layout_toRightOf="@+id/iv_item_userPhoto"
        android:layout_toEndOf="@+id/iv_item_userPhoto" />
</RelativeLayout>